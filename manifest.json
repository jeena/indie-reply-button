{
    "description": "Button to like and reply",
    "manifest_version": 2,
    "name": "Indie Reply Button",
    "version": "3.0",
    "icons": {
        "48": "icons/icon.svg"
    },
    "browser_action": {
        "default_title": "IndieButton",
        "default_popup": "popup.html",
        "browser_style": false,
        "default_icon": "icons/icon.svg",
        "theme_icons": [{
            "light": "icons/icon-light.svg",
            "dark": "icons/icon.svg",
            "size": 32
        }]
    },
    "permissions": [
        "tabs"
    ]
}
