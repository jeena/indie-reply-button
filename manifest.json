{

    "description": "Indie Reply Button",
    "manifest_version": 2,
    "name": "indie-reply-button",
    "version": "1.0",
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        }
    },
    
    "permissions": [
        "tabs"
    ]
}
